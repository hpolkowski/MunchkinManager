<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="jaanuszek0700.munchkinmanager.GameActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/constraintLayout5"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/textView_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/text_level"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintLeft_toRightOf="@+id/imageView6"
            app:srcCompat="@drawable/number_seven_icon" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintLeft_toRightOf="@+id/imageView4"
            app:srcCompat="@drawable/number_five_icon" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintLeft_toRightOf="@+id/imageView8"
            app:srcCompat="@drawable/number_nine_icon" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textView_level"
            app:srcCompat="@drawable/number_one_icon" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView1"
            app:layout_constraintLeft_toRightOf="@+id/imageView1"
            app:srcCompat="@drawable/number_two_icon" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintLeft_toRightOf="@+id/imageView7"
            app:srcCompat="@drawable/number_eight_icon" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            app:srcCompat="@drawable/number_three_icon" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
            app:layout_constraintLeft_toRightOf="@+id/imageView9"
            app:srcCompat="@drawable/number_ten_icon" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintLeft_toRightOf="@+id/imageView5"
            app:srcCompat="@drawable/number_six_icon" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintLeft_toRightOf="@+id/imageView3"
            app:srcCompat="@drawable/number_four_icon" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_players">

        <android.support.constraint.ConstraintLayout
            android:layout_width="@dimen/game_counter_width"
            android:layout_height="0dp"
            android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/constraintLayout6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.49">

            <TextView
                android:id="@+id/textView_modifier"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_modifier"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_modifier">

                <ImageButton
                    android:id="@+id/imageButton2"
                    style="@style/button_arrow"
                    android:layout_width="0dp"
                    android:onClick="increaseModifier"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/arrow_up_image" />

                <TextView
                    android:id="@+id/actual_modifier"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:longClickable="true"
                    android:text="10"
                    android:textAlignment="center"
                    android:textSize="60sp"
                    app:layout_constraintBottom_toTopOf="@+id/imageButton3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    style="@style/button_arrow"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:alpha="0.5"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="decreaseModifier"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:srcCompat="@drawable/arrow_down_image" />
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout6"
            android:layout_width="@dimen/game_counter_width"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView_inventory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_inventory"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_inventory"
                app:layout_constraintVertical_bias="0.304">

                <ImageButton
                    android:id="@+id/imageButton4"
                    style="@style/button_arrow"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:alpha="0.5"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="increaseInventory"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/arrow_up_image" />

                <TextView
                    android:id="@+id/actual_inventory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:longClickable="true"
                    android:text="10"
                    android:textAlignment="center"
                    android:textSize="60sp"
                    app:layout_constraintBottom_toTopOf="@+id/imageButton5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageButton4" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    style="@style/button_arrow"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="-1dp"
                    android:alpha="0.5"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="decreaseInventory"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:srcCompat="@drawable/arrow_down_image" />
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

    <ImageButton
        android:id="@+id/button_dices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:alpha="0.8"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:onClick="rollDices"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/dices_red_icon"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/recyclerView_players"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/button_exit_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:alpha="0.6"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:onClick="quitGame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/emergency_exit_icon"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/recyclerView_players"
        android:layout_marginTop="0dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_players"
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/button_exit_game"
        app:layout_constraintRight_toLeftOf="@+id/button_dices"
        tools:listitem="@layout/adapter_player"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:alpha="0.4"
        android:text="@string/text_room_name"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button_exit_game" />

    <TextView
        android:id="@+id/room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp"
        android:alpha="0.4"
        android:maxLines="1"
        android:text="@string/dummy_text"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/textView_room_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_room_name" />

</android.support.constraint.ConstraintLayout>
