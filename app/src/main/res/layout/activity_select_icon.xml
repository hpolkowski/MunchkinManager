<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_select_icon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="jaanuszek0700.munchkinmanager.SelectIconActivity">

    <ScrollView
        android:id="@+id/fullscreen_select_icon_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button_back"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">


            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="32dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="4dp"
                    android:minHeight="@dimen/user_image_size_medium"
                    android:minWidth="@dimen/user_image_size_medium"
                    android:onClick="selectIcon"
                    android:tag="user_mage_icon"
                    app:layout_constraintRight_toRightOf="@+id/imageView19"
                    app:layout_constraintTop_toBottomOf="@+id/imageView19"
                    app:srcCompat="@mipmap/user_mage_icon" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="4dp"
                    android:minHeight="@dimen/user_image_size_medium"
                    android:minWidth="@dimen/user_image_size_medium"
                    android:onClick="selectIcon"
                    android:tag="user_cowboy_icon"
                    app:layout_constraintLeft_toLeftOf="@+id/imageView18"
                    app:layout_constraintTop_toBottomOf="@+id/imageView18"
                    app:srcCompat="@mipmap/user_cowboy_icon" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="4dp"
                    android:minHeight="@dimen/user_image_size_medium"
                    android:minWidth="@dimen/user_image_size_medium"
                    android:onClick="selectIcon"
                    android:tag="user_hunter_icon"
                    app:layout_constraintLeft_toRightOf="@+id/imageView18"
                    app:layout_constraintRight_toLeftOf="@+id/imageView19"
                    app:layout_constraintTop_toBottomOf="@+id/imageView17"
                    app:srcCompat="@mipmap/user_hunter_icon" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="4dp"
                    android:minHeight="@dimen/user_image_size_medium"
                    android:minWidth="@dimen/user_image_size_medium"
                    android:onClick="selectIcon"
                    android:tag="user_munchkin_santa_icon"
                    app:layout_constraintLeft_toLeftOf="@+id/imageView14"
                    app:layout_constraintTop_toBottomOf="@+id/imageView14"
                    app:srcCompat="@mipmap/user_munchkin_santa_icon" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="4dp"
                    android:minHeight="@dimen/user_image_size_medium"
                    android:minWidth="@dimen/user_image_size_medium"
                    android:onClick="selectIcon"
                    android:tag="user_archer_icon"
                    app:layout_constraintRight_toRightOf="@+id/imageView15"
                    app:layout_constraintTop_toBottomOf="@+id/imageView15"
                    app:srcCompat="@mipmap/user_archer_icon" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="4dp"
                    android:minHeight="@dimen/user_image_size_medium"
                    android:minWidth="@dimen/user_image_size_medium"
                    android:onClick="selectIcon"
                    android:tag="user_munchkin_santa_woman_icon"
                    app:layout_constraintLeft_toRightOf="@+id/imageView14"
                    app:layout_constraintRight_toLeftOf="@+id/imageView15"
                    app:layout_constraintTop_toBottomOf="@+id/imageView12"
                    app:srcCompat="@mipmap/user_munchkin_santa_woman_icon" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="4dp"
                    android:minHeight="@dimen/user_image_size_medium"
                    android:minWidth="@dimen/user_image_size_medium"
                    android:onClick="selectIcon"
                    android:tag="user_munchkin_icon"
                    app:layout_constraintLeft_toRightOf="@+id/imageView14"
                    app:layout_constraintRight_toLeftOf="@+id/imageView15"
                    app:layout_constraintTop_toBottomOf="@+id/imageView11"
                    app:srcCompat="@mipmap/user_munchkin_icon" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:minHeight="@dimen/user_image_size_medium"
                    android:minWidth="@dimen/user_image_size_medium"
                    android:onClick="selectIcon"
                    android:tag="user_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/user_icon"
                    tools:layout_constraintLeft_creator="1"
                    tools:layout_constraintTop_creator="1" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:minHeight="@dimen/user_image_size_medium"
                    android:minWidth="@dimen/user_image_size_medium"
                    android:onClick="selectIcon"
                    android:tag="user_queen_icon"
                    app:layout_constraintLeft_toLeftOf="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    app:srcCompat="@mipmap/user_queen_icon" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="4dp"
                    android:minHeight="@dimen/user_image_size_medium"
                    android:minWidth="@dimen/user_image_size_medium"
                    android:onClick="selectIcon"
                    android:tag="user_monster_icon"
                    app:layout_constraintLeft_toRightOf="@+id/imageView"
                    app:layout_constraintRight_toLeftOf="@+id/imageView13"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/user_monster_icon" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:minHeight="@dimen/user_image_size_medium"
                    android:minWidth="@dimen/user_image_size_medium"
                    android:onClick="selectIcon"
                    android:tag="user_munchkin_woman_icon"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/user_munchkin_woman_icon" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="4dp"
                    android:minHeight="@dimen/user_image_size_medium"
                    android:minWidth="@dimen/user_image_size_medium"
                    android:onClick="selectIcon"
                    android:tag="user_monster_scarry_icon"
                    app:layout_constraintRight_toRightOf="@+id/imageView13"
                    app:layout_constraintTop_toBottomOf="@+id/imageView13"
                    app:srcCompat="@mipmap/user_monster_scarry_icon" />
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_back"
        style="@style/menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:onClick="back"
        android:text="@string/button_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
